<Window x:Class="windowsApplication.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:windowsApplication"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="1000" Loaded="Window_Loaded" WindowStartupLocation="CenterScreen">
    <Grid>
        <Label x:Name="LblUsers" Content="User(s): 0" HorizontalAlignment="Left" 
               Margin="5,0,0,0" VerticalAlignment="Top" FontSize="20" FontWeight="Bold"/>
        <DataGrid x:Name="dgUsers"  Margin="0,40,475,10" IsReadOnly="True" CanUserAddRows="False">
            <DataGrid.Resources>
                <Style TargetType="DataGridRow">
                    <EventSetter Event="MouseDoubleClick" Handler="DataGridRow_MouseDoubleClick"/>
                </Style>
            </DataGrid.Resources>
        </DataGrid>
        <Button x:Name="BtnExit" Content="Exit" HorizontalAlignment="Left" Margin="932,9,0,0" VerticalAlignment="Top" Height="25" Width="52" Click="BtnExit_Click"/>
        <Button x:Name="BtnGetUsers" Content="Get Users" HorizontalAlignment="Left" Margin="129,9,0,0" VerticalAlignment="Top" Click="BtnGetUsers_Click" Height="25" Width="78"/>
        <TextBox x:Name="TbxFileName" HorizontalAlignment="Left" Margin="719,10,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" Height="25"/>
        <Label x:Name="LblFileName" Content="File Name:" HorizontalAlignment="Left" Margin="645,10,0,0" VerticalAlignment="Top" FontWeight="Bold" Height="25"/>
        <Button x:Name="BtnGetAppFiles" Content="Get Files" HorizontalAlignment="Left" Margin="847,9,0,0" VerticalAlignment="Top" Click="BtnGetAppFiles_Click" Height="25" Width="78"/>
        <DataGrid x:Name="dgAppFiles" Margin="475,40,4,10" IsReadOnly="True" CanUserAddRows="False"/>
        <Label x:Name="LblAppFiles" Content="File(s): 0" HorizontalAlignment="Left" VerticalAlignment="Top" FontSize="20" FontWeight="Bold" Margin="551,0,0,0"/>
        <Button x:Name="BtnCreateUser" Content="Create User" HorizontalAlignment="Left" Margin="219,9,0,0" VerticalAlignment="Top" Click="BtnCreateUser_Click" Height="25" Width="78"/>
    </Grid>
</Window>
